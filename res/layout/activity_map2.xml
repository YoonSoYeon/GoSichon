<?xml version="1.0" encoding="utf-8"?>
<!-- 지도 화면 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map_two"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        
         <!-- 봉구스 밥버거 -->
	    <ImageView 
	        android:id="@+id/store_bonggusu"
	        style="@style/MapImage"
	        android:layout_marginLeft="170dp"
	        android:layout_marginTop="150dp"
	        android:src="@drawable/map_korea"/>
	    <ImageView 
	        android:id="@+id/store_bongusu_mal"
	        style="@style/Map_mal"
	        android:layout_marginLeft="170dp"
	        android:layout_marginTop="90dp"
	        android:src="@drawable/store_bongusu_mal"/>
	    
	     <!--cafe' Lavingne -->
	    <ImageView 
	        android:id="@+id/store_cafelavingne"
	        style="@style/MapImage"
	        android:layout_marginLeft="310dp"
	        android:layout_marginTop="420dp"
	        android:src="@drawable/map_dessert"/>
	    <ImageView 
	        android:id="@+id/store_cafelavingne_mal"
	        style="@style/Map_mal"
	        android:layout_marginLeft="290dp"
	        android:layout_marginTop="360dp"
	        android:src="@drawable/store_cafelavingne_mal"/>
	    
	     <!-- Bubbly tea -->
	    <ImageView 
	        android:id="@+id/store_bubblytea"
	        style="@style/MapImage"
	        android:layout_marginLeft="140dp"
	        android:layout_marginTop="440dp"
	        android:src="@drawable/map_dessert"/>
	    <ImageView 
	        android:id="@+id/store_bubblytea_mal"
	        style="@style/Map_mal"
	        android:layout_marginLeft="140dp"
	        android:layout_marginTop="380dp"
	        android:src="@drawable/store_bubblytea_mal"/>
	    
	    <!-- The B컵닭 -->
	    <ImageView 
	        android:id="@+id/store_thebcup"
	        style="@style/MapImage"
	        android:layout_marginLeft="11dp"
	        android:layout_marginTop="425dp"
	        android:src="@drawable/map_america"/>
	    <ImageView 
	        android:id="@+id/store_thebcup_mal"
	        style="@style/Map_mal"
	        android:layout_marginLeft="11dp"
	        android:layout_marginTop="365dp"
	        android:src="@drawable/store_thebcup_mal"/>
	    
	    <!-- 개경순대국 -->
	    <ImageView 
	        android:id="@+id/store_soondae"
	        style="@style/MapImage"
	        android:layout_marginLeft="160dp"
	        android:layout_marginTop="510dp"
	        android:src="@drawable/map_korea"/>
	    <ImageView 
	        android:id="@+id/store_soondae_mal"
	        style="@style/Map_mal"
	        android:layout_marginLeft="160dp"
	        android:layout_marginTop="450dp"
	        android:src="@drawable/store_soondae_mal"/>
    </RelativeLayout>

</LinearLayout>