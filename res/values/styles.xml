<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="StoreName" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#040404</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">85dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="StoreMenu" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#343434</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_alignLeft">@id/store_name</item>
        <item name="android:layout_below">@id/store_name</item>
    </style>

    <!-- activity_stamp 에서 필요한 style들 -->
    <style name="ToggleButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@drawable/toggle_visit_no</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <style name="StampName" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="HorizontalLinearStamp" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LinearStamp" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 음식점 정보에 해당되는 activity_info에 필요한 style -->
    <style name="Bigtitle" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="title" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#a3d75e</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#363636</item>
    </style>

    <!-- 상세검색화면 activith_search에 관련된 style정의들 -->
    <style name="SearchText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
         <item name="android:paddingLeft">10dp</item>
        <item name = "android:paddingBottom">5dp</item>
    </style>
    
    <style name="SearchToggle">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textOff"> </item>
        <item name="android:textOn"> </item>
        <item name="android:layout_weight">3</item>
      <!--   <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item> -->
    </style>
    
    <!-- MapActivity1,2,3,4에서 각 음식점 종류 아이콘 ImageView관련들 -->
	<style name="MapImage">
	    <item name="android:layout_width">60dp</item>
	    <item name="android:layout_height">60dp</item> 
	</style>
	
	<style name="Map_mal">
	    <item name="android:layout_width">75dp</item>
	    <item name="android:layout_height">75dp</item> 
	    <item name="android:visibility">invisible</item>
	</style>
</resources>